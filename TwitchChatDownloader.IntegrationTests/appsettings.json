{    
    "RawTwitchSettings": {
        "ClientId": "ClientId"
    },
    "RawFileSettings": {
        "OutputDirectory": "C:\\"
    },
    "RawSrtSettings": {
        "MaxMessagesOnscreen": 5,
        "MaxSecondsOnscreen": 10,
        "DeltaMilliseconds": 50 
    },
    "Serilog": {
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "D:\\Software\\My Software\\richter-enterprise-apps\\Twitch Chat Downloader.log",
                    "outputTemplate": "LogDateUtc: '{LogDateUtc}' Level: '{LevelText}' Message: {Message}{NewLine}{ConditionalException}",
                    "fileSizeLimitBytes": 1000000,
                    "retainedFileCountLimit": 5,
                    "shared": true,
                    "rollOnFileSizeLimit": true
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "LogDateUtc: '{LogDateUtc}' Level: '{LevelText}' Message: {Message}{NewLine}{ConditionalException}"
                }
            }
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        }
    }
}